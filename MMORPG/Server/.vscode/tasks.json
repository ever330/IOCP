{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${command:msbuild.selectMSBuild}",
            "args": [
                "Server.sln",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "/t:Build",
                "/m"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "${command:msbuild.selectMSBuild}",
            "args": [
                "Server.sln",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "/t:Clean"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "${command:msbuild.selectMSBuild}",
            "args": [
                "Server.sln",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "/t:Rebuild",
                "/m"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}
